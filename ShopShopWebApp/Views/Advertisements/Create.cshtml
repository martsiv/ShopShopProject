@model CreateAdsDto

<h1 class="pb-4 pt-4 m-0 fw-bold">Create New Advertisement</h1>

<form class="row g-3" method="post" enctype="multipart/form-data" asp-action="Create">
	<div class="col-md-12 p-4 bg-white border border-white rounded-3">
		<label asp-for=Title class="form-label">Title</label>
		<input asp-for=Title type="text" class="form-control" placeholder="Enter title">
		<span asp-validation-for=Title></span>
	</div>
	<div class="col-md-12 p-4 bg-white border border-white rounded-3">
		<label asp-for=CategoryId class="form-label">Category</label>
		<select asp-items="ViewBag.Categories" asp-for="CategoryId" class="form-select">
			<option selected disabled>Choose...</option>
		</select>
	</div>
	<div class="col-md-12 p-4 bg-white border border-white rounded-3">
		<label asp-for=Pictures class="form-label col-md-12">Pictures</label>
		<div class="row row-cols-md-4 g-1">

			<div class="col">
				<input asp-for=Pictures style="display : none" type="file" class="image-upload" accept="image/*">
				<label asp-for=Pictures class="image-label">
					<i class="bi bi-camera align-middle"></i>
				</label>
			</div>

			<div class="col">
				<input asp-for=Pictures style="display : none" type="file" class="image-upload" accept="image/*">
				<label asp-for=Pictures class="image-label">
					<i class="bi bi-camera align-middle"></i>
				</label>
			</div>

			<div class="col">
				<input asp-for=Pictures style="display : none" type="file" class="image-upload" accept="image/*">
				<label asp-for=Pictures class="image-label">
					<i class="bi bi-camera align-middle"></i>
				</label>
			</div>

			<div class="col">
				<input asp-for=Pictures style="display : none" type="file" class="image-upload" accept="image/*">
				<label asp-for=Pictures class="image-label">
					<i class="bi bi-camera align-middle"></i>
				</label>
			</div>

			<div class="col">
				<input asp-for=Pictures style="display : none" type="file" class="image-upload" accept="image/*">
				<label asp-for=Pictures class="image-label">
					<i class="bi bi-camera align-middle"></i>
				</label>
			</div>

			<div class="col">
				<input asp-for=Pictures style="display : none" type="file" class="image-upload" accept="image/*">
				<label asp-for=Pictures class="image-label">
					<i class="bi bi-camera align-middle"></i>
				</label>
			</div>

			<div class="col">
				<input asp-for=Pictures style="display : none" type="file" class="image-upload" accept="image/*">
				<label asp-for=Pictures class="image-label">
					<i class="bi bi-camera align-middle"></i>
				</label>
			</div>

			<div class="col">
				<input asp-for=Pictures style="display : none" type="file" class="image-upload" accept="image/*">
				<label asp-for=Pictures class="image-label">
					<i class="bi bi-camera align-middle"></i>
				</label>
			</div>
		</div>
		<span asp-validation-for=Pictures></span>

	</div>

	<div class="col-md-12  p-4 bg-white border border-white rounded-3">
		<label asp-for=Price class="form-label">Price</label>
		<input asp-for=Price type="number" class="form-control" placeholder="Enter product price">
		<span asp-validation-for=Price></span>
	</div>
	<div class="col-12  p-4 bg-white border border-white rounded-3">
		<label asp-for=City class="form-label">City</label>
		<input asp-for=City type="text" class="form-control" placeholder="Enter city">
		<span asp-validation-for=City></span>
	</div>
	<div class="col-md-12  p-4 bg-white border border-white rounded-3">
		<label asp-for=Description class="form-label">Description</label>
		<textarea asp-for=Description class="form-control" rows="3" placeholder="Enter product description"></textarea>
		<span asp-validation-for=Description></span>
	</div>
	<div class="col-12 d-flex justify-content-md-end" style="gap: 10px">
		<a asp-action="Index" class="btn btn-dark w-25">Back</a>
		<button type="submit" class="btn btn-success w-25" style="background-color: rgb(0,47,52); color: white">Create</button>
	</div>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial.cshtml" />
